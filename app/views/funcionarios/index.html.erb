<p style="color: green"><%= notice %></p>

<% content_for :title, "Funcionários" %>

<div class="container mt-4">
  <h1>Funcionários</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Departamento</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @funcionarios.each do |funcionario| %>
        <tr>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.departamento.nome if funcionario.departamento %></td>
          <td>
            <%= link_to 'Ver', funcionario_path(funcionario), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_funcionario_path(funcionario), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Excluir', funcionario_path(funcionario), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Novo Funcionário', new_funcionario_path, class: 'btn btn-success' %>
</div>
