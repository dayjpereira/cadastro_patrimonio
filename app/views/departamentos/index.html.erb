<p style="color: green"><%= notice %></p>

<% content_for :title, "Departamentos" %>

<div class="container mt-4">
  <h1>Departamentos</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @departamentos.each do |departamento| %>
        <tr>
          <td><%= departamento.nome %></td>
          <td>
            <%= link_to 'Ver', departamento_path(departamento), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_departamento_path(departamento), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Excluir', departamento_path(departamento), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Novo Departamento', new_departamento_path, class: 'btn btn-success' %>
</div>
